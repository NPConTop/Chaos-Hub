if not game:IsLoaded() then game.Loaded:Wait() end

local TweenService = game:GetService("TweenService")
local SoundService = game:GetService("SoundService")

-- GUI Setup
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "ChaosMultiLoader"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 420, 0, 240)
frame.Position = UDim2.new(0.5, 0, 0.5, 0)
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BackgroundTransparency = 1
frame.BorderSizePixel = 0
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 10)
title.BackgroundTransparency = 1
title.Text = ""
title.Font = Enum.Font.FredokaOne
title.TextSize = 28
title.TextColor3 = Color3.fromRGB(255, 70, 70)
title.TextTransparency = 0

-- Typing Animation
local function typeText(text)
	title.Text = ""
	for i = 1, #text do
		title.Text = string.sub(text, 1, i)
		task.wait(0.05)
	end
end

-- Button creator
local function createButton(name, posY, callback)
	local btn = Instance.new("TextButton", frame)
	btn.Size = UDim2.new(0.8, 0, 0, 35)
	btn.Position = UDim2.new(0.1, 0, 0, posY)
	btn.Text = name
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 16
	btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.AutoButtonColor = true
	btn.Visible = false
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
	btn.MouseButton1Click:Connect(callback)
	return btn
end

-- Buttons
local nexusBtn = createButton("Load Nexus", 60, function()
	loadstring(game:HttpGet("https://api.luarmor.net/files/v3/loaders/86de6d175e585ef6c1c7f4bdebfc57cc.lua"))()
	gui:Destroy()
end)

local chaosBtn = createButton("Load Chaos Hub", 100, function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/YourUser/YourRepo/main/chaos.lua"))()
	gui:Destroy()
end)

local otherBtn = createButton("Load Custom Script", 140, function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/YourUser/YourRepo/main/otherscript.lua"))()
	gui:Destroy()
end)

local viewBtn = createButton("Show Nexus Script", 180, function()
	local scriptPopup = Instance.new("TextBox", gui)
	scriptPopup.Size = UDim2.new(0, 500, 0, 300)
	scriptPopup.Position = UDim2.new(0.5, 0, 0.5, 0)
	scriptPopup.AnchorPoint = Vector2.new(0.5, 0.5)
	scriptPopup.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
	scriptPopup.TextColor3 = Color3.fromRGB(0, 255, 100)
	scriptPopup.ClearTextOnFocus = false
	scriptPopup.TextSize = 14
	scriptPopup.Font = Enum.Font.Code
	scriptPopup.TextWrapped = false
	scriptPopup.TextXAlignment = Enum.TextXAlignment.Left
	scriptPopup.TextYAlignment = Enum.TextYAlignment.Top
	scriptPopup.TextEditable = false
	scriptPopup.Text = "Loading..."
	Instance.new("UICorner", scriptPopup).CornerRadius = UDim.new(0, 6)

	coroutine.wrap(function()
		local success, result = pcall(function()
			return game:HttpGet("https://api.luarmor.net/files/v3/loaders/86de6d175e585ef6c1c7f4bdebfc57cc.lua")
		end)
		scriptPopup.Text = success and result or "Failed to load script."
	end)()
end)

-- Start Animation
TweenService:Create(frame, TweenInfo.new(0.6), {BackgroundTransparency = 0.1}):Play()

-- Typing + sound
typeText("SCRIPT IS RUNNING...")
local sound = Instance.new("Sound", SoundService)
sound.SoundId = "rbxassetid://9118823107"
sound.Volume = 2
sound:Play()

-- Reveal buttons after typing
task.wait(1)
for _, btn in pairs({nexusBtn, chaosBtn, otherBtn, viewBtn}) do
	task.wait(0.2)
	btn.Visible = true
end
