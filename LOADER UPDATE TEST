-- SEARCH FILTER
searchBox:GetPropertyChangedSignal("Text"):Connect(function()
	local query = string.lower(searchBox.Text)
	for _, btn in ipairs(allButtons) do
		btn.Visible = string.find(string.lower(btn.Text), query) ~= nil
	end
end)
